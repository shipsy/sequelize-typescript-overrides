{
    "compilerOptions": {
        "module": "commonjs",
        "declaration": true,
        "noImplicitAny": false,
        "removeComments": true,
        "noLib": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "target": "es2017",
        "sourceMap": true,
        "allowJs": true,
        "outDir": "./dist",
        "alwaysStrict": true
    },
    "include": [
        "src/**/*",
        "lib/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ],
    "tslint.autoFixOnSave": true
}